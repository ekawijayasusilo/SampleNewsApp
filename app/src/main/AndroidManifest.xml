<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.samplenewsapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.category.views.ListCategoryActivity"
            android:label="@string/title_list_category"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.source.views.SearchSourceActivity"
            android:label="@string/title_search_source"
            android:screenOrientation="portrait" />

        <activity
            android:name=".presentation.article.views.SearchArticleActivity"
            android:label="@string/title_search_article"
            android:screenOrientation="portrait" />

        <activity
            android:name=".presentation.article.views.ArticleDetailWebViewActivity"
            android:label="@string/title_article_detail"
            android:screenOrientation="portrait" />

    </application>

</manifest>